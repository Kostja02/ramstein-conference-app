.card
  max-height 500px
  margin-bottom 16px
  mat-card-content
    overflow hidden
  @media (min-width: 560px)
    width 200px
    // workaround: https://github.com/angular/material2/issues/661#issuecomment-345356896
    display flex
    flex-direction column
    flex-shrink 0
    mat-card-content
      display flex
      flex 1
      overflow hidden
